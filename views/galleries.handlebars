<div class="wrapper padded">
    <div class="row galleries">
        {{#if galleries}} {{#each galleries}}
        <a href="/gallery/{{this._id}}" class="col-xs-12 col-md-4">
            <div class="item">
                {{#if this.coverRelative}}
                <div class="image" style="background-image:url('user_images/{{this.coverRelative}}')"></div>
                {{else}}
                <div class="image" style="background-image:url('http://via.placeholder.com/500x200?text=No+Images+Yet')"></div>
                {{/if}}
                <div class="title center-text">
                    <h1>{{this.name}}</h1>
                </div>
            </div>
        </a>
        {{/each}} {{else}}
        <div class="col-xs-12 center-text">
            <h1>You don't have any galleries yet. Make one now.</h1>
        </div>
        {{/if}}
    </div>
</div>

<a href="/galleries/create" class="floating-button primary">+</a>